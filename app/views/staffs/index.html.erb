<!-- This loop will list all of the current members of the department staffs -->

<strong>List of current staff.</strong>



<div id="staff-list">
 	<table border="1">
 		<tr>
 			<td width="60"><b>Possition</b></td>
 			<td width="130"><b>Name </b></td>
 			<td width="50"><b>Email</b></td>
 		</tr>

 		<% @staff.each do |x| %> 
 		<tr>
 			<td><%= x.job_title%></td>

 			<td><%=link_to x.fname, staff_path(x.id) %></td>
 			<td><%= x.email%></td>



 			
 		</tr>
 		<% end%>
 	</table>



