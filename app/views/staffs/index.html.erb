<% if session[:staff_id]%>
Would you like to post a new article, <%=@current_staff.job_title%> <%=@current_staff.lname%>? <br><br>
Please click here to post an article  
<%end%>

<br><br><br><br>
<!-- This loop will list all of the current members of the department staffs -->

<strong>List of current staff.</strong>



<div id="staff-list">
 	<table border="1">
 		<tr>
 			<td width="60"><b>Possition</b></td>
 			<td width="130"><b>Name </b></td>
 			<td width="50"><b>Email</b></td>
 		</tr>

 		<% @staff.each do |x| %> 
 		<tr>
 			<td><%= x.job_title%></td>

 			<td><%=link_to x.fname, staff_path(x.id) %></td>
 			<td><%= x.email%></td>



 			
 		</tr>
 		<% end%>
 	</table>



<br><br><br><br><br>

<%= form_tag "/login", method: "post" do %>   
<%=label_tag :email %>   
<%=text_field_tag :email %> 
<%=label_tag :password %>   
<%=password_field_tag :password %>  
<%=submit_tag "Login" %> 
<% end %>